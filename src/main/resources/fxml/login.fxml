<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.patrakosh.controller.LoginController"
           style="-fx-background-color: #F5EFE6;">
    
    <!-- Center Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: #F5EFE6; -fx-background-color: #F5EFE6;" hbarPolicy="NEVER">
            <VBox alignment="CENTER" spacing="30" style="-fx-background-color: #F5EFE6;">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>
                
                <!-- Card Container -->
                <VBox alignment="CENTER" spacing="25" maxWidth="450"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <padding>
                    <Insets top="50" right="50" bottom="50" left="50"/>
                </padding>
                
                <!-- Logo/Icon -->
                <!-- ICON: Uncomment below to use custom logo icon -->
                <!-- <ImageView fitWidth="80" fitHeight="80" preserveRatio="true">
                    <image>
                        <Image url="@../icons/logo.png"/>
                    </image>
                </ImageView> -->
                <!-- Default emoji icon (remove when using custom icon) -->
                <Label text="ðŸ“¦" style="-fx-font-size: 56px;"/>
                
                <!-- Title -->
                <Label text="PatraKosh" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #192A51;"/>
                
                <Label text="Sign in to your account" style="-fx-font-size: 15px; -fx-text-fill: #757575;"/>
            
                <!-- Username/Email Field -->
                <VBox spacing="8">
                    <Label text="Username or Email" style="-fx-font-size: 14px; -fx-text-fill: #424242;"/>
                    <TextField fx:id="usernameField" promptText="Enter username or email"
                              style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-padding: 14; -fx-font-size: 15px;"
                              prefWidth="350"/>
            </VBox>
            
                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" style="-fx-font-size: 14px; -fx-text-fill: #424242;"/>
                    <HBox spacing="0">
                        <PasswordField fx:id="passwordField" promptText="Enter password"
                                      style="-fx-background-radius: 8 0 0 8; -fx-border-radius: 8 0 0 8; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-padding: 14; -fx-font-size: 15px;"
                                      prefWidth="305"/>
                        <TextField fx:id="passwordTextField" promptText="Enter password" visible="false" managed="false"
                                  style="-fx-background-radius: 8 0 0 8; -fx-border-radius: 8 0 0 8; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-padding: 14; -fx-font-size: 15px;"
                                  prefWidth="305"/>
                        <Button fx:id="togglePasswordBtn" text="ðŸ‘" onAction="#togglePasswordVisibility"
                               style="-fx-background-color: white; -fx-background-radius: 0 8 8 0; -fx-border-radius: 0 8 8 0; -fx-border-color: #E0E0E0; -fx-border-width: 1 1 1 0; -fx-padding: 14; -fx-font-size: 15px; -fx-cursor: hand;"
                               prefWidth="45"/>
                    </HBox>
                </VBox>
                
                <!-- Error Label -->
                <Label fx:id="errorLabel" style="-fx-text-fill: #F44336; -fx-font-size: 13px;" wrapText="true" visible="false"/>
                
                <!-- Login Button -->
                <Button fx:id="loginButton" text="Login" onAction="#handleLogin" defaultButton="true"
                       style="-fx-background-color: #192A51; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 14 20;"
                       prefWidth="350" prefHeight="50">
                </Button>
                
                <!-- Signup Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" style="-fx-font-size: 14px; -fx-text-fill: #757575;"/>
                    <Hyperlink fx:id="signupLink" text="Sign up" onAction="#handleSignupLink"
                              style="-fx-font-size: 14px; -fx-text-fill: #192A51; -fx-underline: true; -fx-cursor: hand;"/>
                </HBox>
            </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
